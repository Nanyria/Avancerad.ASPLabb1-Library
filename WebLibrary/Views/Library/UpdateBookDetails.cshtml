@model UpdateBookInfoDTO
<h1>Update Book Info</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateBookDetails">
            <input asp-for="BookID" hidden />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Title" class="control-group"></label>
                <input asp-for="Title" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Author" class="control-group"></label>
                <input asp-for="Author" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Genre" class="control-group"></label>
                <input asp-for="Genre" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="PublicationYear" class="control-group"></label>
                <input asp-for="PublicationYear" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="BookDescription" class="control-group"></label>
                <input asp-for="BookDescription" class="form-control" />
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="LibraryIndex">Back to View all Books</a>
</div>